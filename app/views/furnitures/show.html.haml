                      %small= @furniture.title
                .row
                  .col-md-3
                    %h4 Category:
                  .col-md-8.line-break
                    %h4
                      %span.label.label-info= @furniture.tag
                .row
                  .col-md-3
                    %h4 Description:
                  .col-md-8.line-break
                    %h4
                      %small= @furniture.description
                .row
                  .col-md-3
                    %h4 Oldness:
                  .col-md-8.line-break
                    %h4
                      %small= @furniture.oldness
                .row
                  .col-md-3
                    %h4 Contact's Email:
                  .col-md-8.line-break
                    %h4
                      %small= @furniture.email
                .row
                  .col-md-3
                    %h4 Phone Number:
                  .col-md-8.line-break
                    %h4
                      %small= @furniture.phone
              #addr.tab-pane.fade
                %b Address:
                - if @furniture.user != nil
                  = @furniture.address
                %br
                %b
                  %p{:style => 'color:red'}
                #map-location

