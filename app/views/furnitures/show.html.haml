                %span
                  = "$" + @furniture.price.to_s
                %a.info.cart{:href => ""}
                  %span.icon>
                    %i.icon-basket
                  = link_to 'Add to Watch List', "/furnitures/#{@furniture.id}", method: :post
            %ul.nav.nav-tabs
