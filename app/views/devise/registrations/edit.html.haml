%hr
.outter
  %section.content-wrapper
    .container
      %section.content-wrapper
        %h3
          Edit #{resource_name.to_s.humanize}
        .container
          .row
            .col-md-12
              .content-box
                = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
                  = devise_error_messages!
                  .row
                    .col-md-8
                      .field
                        = f.label :email
                        .row
                          .col-md-8
                            = f.email_field :email, {autofocus: true, class: "form-control", placeholder: "email"}
                  %br
                  .row
                    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                      %div
                        Currently waiting confirmation for: #{resource.unconfirmed_email}
                    .col-md-8
                      .field
                        = f.label :password
                        %i (leave blank if you don't want to change it)
                        .row
                          .col-md-8
                            = f.password_field :password, {autocomplete: "off", class: "form-control", placeholder: "New Password"}
                  %br
                  .row
                    .col-md-8
                      .field
                        = f.label :password_confirmation
                        .row
                          .col-md-8
                            = f.password_field :password_confirmation, {autocomplete: "off", class: "form-control", placeholder: "Repeat New Password"}
                  %br
                  .row
                    .col-md-8
                      .field
                        = f.label :current_password
                        %i (we need your current password to confirm your changes)
                        .row
                          .col-md-8
                            = f.password_field :current_password, {autocomplete: "off", class: "form-control", placeholder: "Old Password"}
                  %br
                  .row
                    .col-md-8
                      .field
                        = f.label :username
                        %i (Your username is shown to the public)
                        .row
                          .col-md-8
                            = f.text_field :name, {class: "form-control", placeholder: "Username"}
                  %br
                  .row
                    .col-md-8
                      .field
                        = f.label :phone_number
                        .row
                          .col-md-8
                            = f.text_field :phone, {class: "form-control", placeholder: "Phone number"}
                  %br
                  .row
                    .col-md-8
                      .field
                        = f.label :address
                        %i (Please enter the address where your furniture locate at.)
                        .row
                          .col-md-8
                            = f.text_field :address, {class: "form-control", placeholder: "Local Address"}
                  %br
                  .row
                    .col-md-8
                      .field
                        = f.label :introduction
                        .row
                          .col-md-8
                            = f.text_area :introduction, {class: "form-control", placeholder: "Optional self-introduction."}
                  %br
                  .actions
                    = f.submit "Update"
                  %br
                %h3 Cancel my account
                %p
                  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
                %p
                  = link_to "Back", :back