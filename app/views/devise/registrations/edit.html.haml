%section.content-wrapper
  .container
    .row
      .col-md-12
        .content-box
          %h3.text-center== EDIT PROFILE #{resource_name.to_s.humanize}
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            .row
              .col-md-12.text-center
                = devise_error_messages!
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :email
                  .col-md-6
                    = f.email_field :email, {autofocus: true, class: "form-control", placeholder: "Email"}
            .form-group
              .row
                - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                  %div
                    Currently waiting confirmation for: #{resource.unconfirmed_email}
                .col-md-12
                  .col-md-3.text-right
                    = f.label :password, "New Password"
                  .col-md-6
                    = f.password_field :password, {autocomplete: "off", class: "form-control", placeholder: "New Password"}
                    - if @validatable
                      %em
                        (#{@minimum_password_length} characters minimum)
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :password_confirmation, "Repeat New Password"
                  .col-md-6
                    = f.password_field :password_confirmation, {autocomplete: "off", class: "form-control", placeholder: "Repeat New Password"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :current_password, "Current Password"
                  .col-md-6
                    = f.password_field :current_password, {autocomplete: "off", class: "form-control", placeholder: "Current Password (We need your current password to confirm your changes)"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :username
                  .col-md-6
                    = f.text_field :name, {class: "form-control", placeholder: "Username (Your username is shown to the public)"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :phone_number
                  .col-md-6
                    = f.text_field :phone, {class: "form-control", placeholder: "Phone Number"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :address
                  .col-md-6
                    = f.text_field :address, {class: "form-control", placeholder: "Local Address (Please enter the address where your furniture locate at.)"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :introduction
                  .col-md-6
                    = f.text_area :introduction, {class: "form-control", placeholder: "Self Introduction (Optinal)"}
            .row.actions
              .col-md-12.text-center
                = f.submit "UPDATE PROFILE", class: "btn btn-default"
            %br
          %h3.text-center Cancel my account
          %p.text-center
            Unhappy?
          .row.actions
            .col-md-12.text-center
              = button_to "CANCEL MY ACCOUNT", registration_path(resource_name), data: { confirm: "Are You Sure?" }, method: :delete, class: "btn btn-default text-center"
          %p.text-center
            = link_to "BACK", :back