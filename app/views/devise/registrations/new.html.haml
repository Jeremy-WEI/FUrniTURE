                  -#  %input#inputName11.form-control{:placeholder => "Name", :type => "text"}
                  -#.form-group
                  -#  %label.control-label{:for => "inputPassword12"} Password
                  -#  %input#inputPassword12.form-control{:placeholder => "Password", :type => "password"}
                  -#.form-group
                  -#  %label.control-label{:for => "inputPasswords12"} Re-type Password
                  -#  %input#inputPasswords12.form-control{:placeholder => "Re-type Password Again", :type => "password"}
                  -#.form-group
                  -#  %label.control-label{:for => "inputPhone11"} Phone Number
                  -#  %input#inputPhone11.form-control{:placeholder => "Phone Number", :type => "text"}
                  -#.form-group
                  -#  %label.control-label{:for => "inputAddress11"} Address
                  -#  %input#inputAddress11.form-control{:placeholder => "Please specify the address of the furnitures", :type => "text"}
                  -#.form-group
