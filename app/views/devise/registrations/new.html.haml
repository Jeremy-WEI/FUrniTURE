%section.content-wrapper
  .container
    .row
      .col-md-12
        .content-box
          %h3.text-center SIGN IN
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            .row
              .col-md-12.text-center
                = devise_error_messages!
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :email
                  .col-md-6
                    = f.email_field :email, {autofocus: true, class: "form-control", placeholder: "Email"}
            .form-group
              .row
                - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                  %div
                    Currently waiting confirmation for: #{resource.unconfirmed_email}
                .col-md-12
                  .col-md-3.text-right
                    = f.label :password
                  .col-md-6
                    = f.password_field :password, {autocomplete: "off", class: "form-control", placeholder: "Password"}
                    - if @validatable
                      %em
                        (#{@minimum_password_length} characters minimum)
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :password_confirmation
                  .col-md-6
                    = f.password_field :password_confirmation, {autocomplete: "off", class: "form-control", placeholder: "Repeat Password"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :username
                  .col-md-6
                    = f.text_field :name, {class: "form-control", placeholder: "Username (Your username is shown to the public)"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :phone_number
                  .col-md-6
                    = f.text_field :phone, {class: "form-control", placeholder: "Phone Number"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :address
                  .col-md-6
                    = f.text_field :address, {class: "form-control", placeholder: "Local Address (Please enter the address where your furniture locate at.)"}
            .form-group
              .row
                .col-md-12
                  .col-md-3.text-right
                    = f.label :introduction
                  .col-md-6
                    = f.text_area :introduction, {class: "form-control", placeholder: "Self Introduction (Optional)"}
            .row.actions
              .col-md-12.text-center
                = f.submit "SIGN UP", class: "btn btn-default"