            -#  %input#inputPasswords12.form-control{:placeholder => "Re-type Password Again", :type => "password"}
            -#.form-group
            -#  %label.control-label{:for => "inputPhone11"} Phone Number
            -#  %input#inputPhone11.form-control{:placeholder => "Phone Number", :type => "text"}
            -#.form-group
            -#  %label.control-label{:for => "inputAddress11"} Address
