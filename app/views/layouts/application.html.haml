!!!
%html
  %head
    %title FUrniTURE
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp"
    = csrf_meta_tags
  %body
    .outter
      %section.top-block
        .container
          .row
            .col-md-12
              .sel-top
      %section.header
        .container
          .row
            .col-sm-6
              .sitelogo-block
                .logo
                  %a{:href => "javascript:;"}
                    = image_tag 'logo.png'
                .titledesc
                  %h1 FU<small>rni</small>TURE
                  %span Best Used Furniture Trading Platform
            .col-sm-6
              .topinfo-block
                %form{:method => "POST"}
                  %input.input-search{:name => "search", :placeholder => "search", :type => "text", :value => ""}
                    %button.submit-search{:name => "submit", :type => "submit"}
                      %i.icon-search
                - if user_signed_in?
                  %a.info.login{:href => "login.html"}
                    %span.icon>
                      %i.icon-lock
                    = link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
                  %a.info.login{:href => "login.html"}
                    %span.icon>
                      %i.icon-lock
                    = link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'
                  %a.info.cart{:href => "cart.html"}
                    %span.icon>
                      %i.icon-basket
                    Watch list
                - else
                  %a.info.login{:href => "login.html"}
                    %span.icon>
                      %i.icon-lock
                    = link_to "Login", new_user_session_path, :class => 'navbar-link'
                  %a.info.login{:href => "login.html"}
                    %span.icon>
                      %i.icon-lock
                    = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert
      %hr
      = yield